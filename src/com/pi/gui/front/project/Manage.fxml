<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane styleClass="background-white" stylesheets="@../../../utils/MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pi.gui.front.project.ManageController">
    <StackPane layoutY="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Text fx:id="topText" strokeType="OUTSIDE" strokeWidth="0.0" text="texte haut">
            <font>
                <Font name="Arial Bold" size="23.0"/>
            </font>
        </Text>
    </StackPane>
    <VBox layoutX="50.0" layoutY="80.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="80.0">

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Owner :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <ComboBox fx:id="userCB" promptText="Choisir user" styleClass="form-control"/>

            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="nameTF" alignment="TOP_LEFT" promptText="Saisir name" styleClass="form-control"/>
            </VBox>

        </HBox>

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Theme :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="themeTF" alignment="TOP_LEFT" promptText="Saisir theme" styleClass="form-control"/>
            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Status :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="statusTF" alignment="TOP_LEFT" promptText="Saisir status" styleClass="form-control"/>
            </VBox>

        </HBox>

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <HBox alignment="CENTER_LEFT">
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#chooseImage"
                            styleClass="form-control" text="Choisir une image" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets bottom="20.0" right="20.0" top="20.0"/>
                        </HBox.margin>
                    </Button>
                    <ImageView fx:id="imageIV" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true"
                               preserveRatio="true">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" top="10.0"/>
                        </HBox.margin>
                        <Image url="@../../../images/mdi/image-placeholder.png"/>
                    </ImageView>
                </HBox>

            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="descriptionTF" alignment="TOP_LEFT" promptText="Saisir description"
                           styleClass="form-control"/>
            </VBox>

        </HBox>

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Location :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="locationTF" alignment="TOP_LEFT" promptText="Saisir location"
                           styleClass="form-control"/>
            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Created :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <DatePicker fx:id="createdDP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            minHeight="-Infinity" minWidth="-Infinity" styleClass="form-control"/>

            </VBox>

        </HBox>

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Updated :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <DatePicker fx:id="updatedDP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            minHeight="-Infinity" minWidth="-Infinity" styleClass="form-control"/>

            </VBox>


        </HBox>

    </VBox>
    <Button fx:id="btnAjout" layoutX="265.0" layoutY="434.0" mnemonicParsing="false" onAction="#manage"
            prefHeight="51.0" prefWidth="150.0" styleClass="success-button" text="manipulation" textAlignment="CENTER"
            textFill="WHITE" wrapText="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="260.0"
            AnchorPane.rightAnchor="260.0"/>
</AnchorPane>