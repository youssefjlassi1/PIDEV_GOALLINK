<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@../../../utils/MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" styleClass="window-rounded" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000033" height="50.0" radius="24.5" width="50.0" />
        </effect>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </HBox.margin>
                <Text fx:id="projectText" text="Project" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="recivedAmountText" text="RecivedAmount" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="updatedAtText" text="UpdatedAt" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>

            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </HBox.margin>
                <Text fx:id="goalAmountText" text="GoalAmount" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="createdAtText" text="CreatedAt" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>

            </VBox>
         <VBox>
            <children>
               <Button fx:id="generatePDFButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="PDF">
                  <VBox.margin>
                     <Insets bottom="20" left="20" right="20" top="20" />
                  </VBox.margin>
               </Button>
               <Button fx:id="editButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="Modifier">
                  <VBox.margin>
                     <Insets bottom="20" left="20" right="20" top="20" />
                  </VBox.margin>
               </Button>
               <Button fx:id="deleteButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="Supprimer">
                  <VBox.margin>
                     <Insets bottom="20" left="20" right="20" top="20" />
                  </VBox.margin>
               </Button>
            </children>
         </VBox>

        </HBox>
    </AnchorPane>
</AnchorPane>
