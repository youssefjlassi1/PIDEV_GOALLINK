                </Text>
                <TextField fx:id="recivedAmountTF" alignment="TOP_LEFT" promptText="Saisir recivedAmount"
                           styleClass="form-control"/>
            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
