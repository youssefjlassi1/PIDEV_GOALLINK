                    <Insets bottom="20" left="20" right="20" top="20"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CreatedAt :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <DatePicker fx:id="createdAtDP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
